{
  "name": "ghq-node",
  "version": "0.0.0",
  "description": "GitHub repositories Query manager",
  "keywords": [
    "cli",
    "ghq",
    "git",
    "github",
    "vcs"
  ],
  "license": "MIT",
  "author": "2nthony",
  "repository": "2nthony/ghq",
  "funding": "https://github.com/sponsors/2nthony",
  "bin": {
    "ghq": "./dist/cli.js",
    "ghq-node": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
