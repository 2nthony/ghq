  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "cac": "6.7.14",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsup": "8.5.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "url-join": "5.0.0",
    "vitest": "4.0.18"
